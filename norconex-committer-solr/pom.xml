    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <site.baseurl/>
    <currentStableVersion>1.1.0</currentStableVersion>
    <solr.version>4.7.0</solr.version>
  </properties>
  <inceptionYear>2009</inceptionYear>

  <licenses>
